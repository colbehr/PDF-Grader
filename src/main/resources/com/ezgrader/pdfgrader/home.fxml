<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane id="root" maxWidth="Infinity" maxHeight="Infinity" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ezgrader.pdfgrader.HomeController">
    <stylesheets>
        <URL value="@./shared.css"/>
        <URL value="@./home.css"/>
    </stylesheets>
    <VBox styleClass="mainContainer" id="outerContainer">
        <VBox id="title">
            <Label styleClass="h1" style="-fx-text-alignment: center">PDF Grader</Label>
        </VBox>
        <Button text="NEW" id="newButton" onAction="#GoToSetup"></Button>
        <Button text="Open" id="openButton" onAction="#OpenTest"></Button>
        <Separator styleClass="vert-spacer"/>
        <VBox style="-fx-alignment: center">
            <Label styleClass="h3">Recent Tests</Label>
            <TableView fx:id="recentTable" styleClass="prettyTable, noheader" style="-fx-max-width: 500px">
                <placeholder><Label text="No recent PDFs"/></placeholder>
                <columns>
                    <TableColumn fx:id="nameCol" text="Files" style="-fx-pref-width: 200px; -fx-alignment: baseline-center; -fx-font-family: 'Quicksand Bold';"></TableColumn>
                    <TableColumn fx:id="pathCol" text="Files" style="-fx-alignment: baseline-center; -fx-font-family: 'Quicksand Bold'; -fx-text-fill: #777777"></TableColumn>
                </columns>
            </TableView>
        </VBox>
    </VBox>


</GridPane>