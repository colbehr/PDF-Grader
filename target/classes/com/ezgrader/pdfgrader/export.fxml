<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane xmlns="http://javafx.com/javafx/16" id="root" maxWidth="Infinity" maxHeight="Infinity" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ezgrader.pdfgrader.ExportController">
    <stylesheets>
        <URL value="@./shared.css" />
        <URL value="@./setup.css"/>
    </stylesheets>
    <VBox styleClass="mainContainer" prefHeight="600" prefWidth="800" style="-fx-alignment: center; -fx-spacing: 20px" VBox.vgrow="ALWAYS">
        <Label styleClass="h1" text="Export" />
        <VBox style="-fx-alignment: center; -fx-spacing: 8px">
            <Label text="Choose a folder for outputting individual tests." />
            <HBox style="-fx-alignment: center; -fx-spacing: 15px">
              <TextField />
              <Button mnemonicParsing="false" text="Select Folder" />
            </HBox>
        </VBox>
        <VBox style="-fx-alignment: center; -fx-spacing: 8px">
            <Label text="Choose a file to output test overview." />
            <HBox style="-fx-alignment: center; -fx-spacing: 15px">
              <TextField />
              <Button mnemonicParsing="false" text="Select File" />
            </HBox>
        </VBox>
        <Separator styleClass="vert-spacer"/>
        <Button id="newButton" mnemonicParsing="false" text="Export" />
    </VBox>
</GridPane>
