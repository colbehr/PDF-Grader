<?xml version="1.0" encoding="UTF-8"?>

<?import com.ezgrader.pdfgrader.AwesomeIcon?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.WebView?>
<?import java.net.URL?>
<GridPane id="root" maxWidth="Infinity" maxHeight="Infinity" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ezgrader.pdfgrader.GradingController">
    <stylesheets>
        <URL value="@./shared.css"/>
        <URL value="@./grading.css"/>
    </stylesheets>
    <SplitPane id="side-split">
        <VBox>
            <VBox VBox.vgrow="ALWAYS" />
            <Pagination fx:id="pagination" prefHeight="66.0" prefWidth="354.0" />
        </VBox>
        <VBox id="grading-side" prefWidth="200">
            <HBox id="grading-top">
                <HBox styleClass="iconAndText">
                    <Label styleClass="fa-icon" style="-fx-font-size: 14pt"><AwesomeIcon fx:constant="FILE"/></Label>
                    <Label fx:id="testNameText">CSCI492 SP22 - Example Test</Label>
                </HBox>
                <HBox HBox.hgrow="ALWAYS" />
                <Button fx:id="doneButton" onAction="#finishedGrading">
                    <graphic><BorderPane>
                        <center>
                            <Label style="-fx-text-fill: white">Done</Label>
                        </center>
                        <right>
                            <Label styleClass="fa-icon" style="-fx-text-fill: white">
                                <AwesomeIcon fx:constant="CHECK_CIRCLE"/>
                            </Label>
                        </right>
                    </BorderPane></graphic>
                </Button>
            </HBox>
            <VBox id="grading-middle">
                <HBox id="question-header">
                    <HBox styleClass="h2" style="-fx-spacing: 12px">
                        <Label>Question</Label><Label fx:id="questionNumberText">1</Label>
                    </HBox>
                    <HBox id="total-questions" style="-fx-spacing: 5px; -fx-alignment: center-left">
                        <Label style="-fx-padding: 0 0 0 5px">of</Label><Label fx:id="questionsTotalText">10</Label>
                    </HBox>
                </HBox>
                <Separator styleClass="vert-spacer"></Separator>
                <HBox id="q-score">
                    <TextField styleClass="numberField" fx:id="pointsGivenField"></TextField>
                    <Label id="score-outof"> out of </Label>
                    <Label fx:id="pointsTotalText" styleClass="score-num">10</Label>
                    <CheckBox fx:id="autoTotalCheckbox" text="Auto-Total" onAction="#ToggleAutoTotal"></CheckBox>
                </HBox>
                <Separator styleClass="vert-spacer"></Separator>
                <Label styleClass="h3">Feedback</Label>
                <HBox style="-fx-spacing: 10px">
                    <TextField fx:id="feedbackNewPoints" promptText="+1"></TextField>
                    <HBox HBox.hgrow="ALWAYS"><TextField fx:id="feedbackNewDesc" promptText="Reasoning for giving/taking points" onAction="#addFeedback"></TextField></HBox>
                    <Button styleClass="fa-icon" id="add-feedback" onAction="#addFeedback"><text><AwesomeIcon fx:constant="PLUS"/></text></Button>
                </HBox>
                <HBox styleClass="space-box"></HBox>
                <TableView fx:id="feedbackTable" styleClass="noheader" onKeyPressed="#deleteFeedback">
                    <placeholder><Label text="No Feedback yet"/></placeholder>
                    <columns>
                        <TableColumn fx:id="pointsCol" text="Points" style="-fx-pref-width: 40px; -fx-alignment: baseline-center; -fx-font-family: 'Quicksand Bold';">
                            <cellValueFactory>
                                <PropertyValueFactory property="points" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Explanation" style="-fx-alignment: baseline-left; -fx-pref-width: 9999px">
                            <cellValueFactory>
                                <PropertyValueFactory property="Explanation" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <Separator styleClass="vert-spacer"></Separator>
            </VBox>
            <HBox id="grading-bottom">
                <Button fx:id="prevTestButton" onAction="#prevTest" styleClass="fa-icon"><text><AwesomeIcon fx:constant="ARROW_LEFT"/></text></Button>
                <Button fx:id="nextTestButton" onAction="#nextTest" styleClass="fa-icon"><text><AwesomeIcon fx:constant="ARROW_RIGHT"/></text></Button>
            </HBox>
            <TextFlow id="test-counter">
                <Text text="Test "/>
                <Text fx:id="currentTestText" text="1" style="-fx-font-family: 'Quicksand Bold'"/>
                <Text text=" of "/>
                <Text fx:id="totalTestsText" text="22" style="-fx-font-family: 'Quicksand Bold'"/>
            </TextFlow>
            <VBox VBox.vgrow="ALWAYS"></VBox>
            <HBox fx:id="questionNav">
                <Button fx:id="prevQuestionButton" onAction="#prevQuestion">
                    <graphic><BorderPane>
                        <left>
                            <Label styleClass="fa-icon" style="-fx-text-fill: white">
                                <AwesomeIcon fx:constant="ARROW_CIRCLE_LEFT"/>
                            </Label>
                        </left>
                        <center>
                            <Label style="-fx-text-fill: white">Prev Question</Label>
                        </center>
                    </BorderPane></graphic>
                </Button>
                <HBox HBox.hgrow="ALWAYS"></HBox>
                <Button fx:id="nextQuestionButton" onAction="#nextQuestion">
                    <graphic><BorderPane>

                        <center>
                            <Label style="-fx-text-fill: white">Next Question</Label>
                        </center>
                        <right>
                            <Label styleClass="fa-icon" style="-fx-text-fill: white">
                                <AwesomeIcon fx:constant="ARROW_CIRCLE_RIGHT"/>
                            </Label>
                        </right>
                    </BorderPane></graphic>
                </Button>
            </HBox>
        </VBox>
    </SplitPane>
</GridPane>