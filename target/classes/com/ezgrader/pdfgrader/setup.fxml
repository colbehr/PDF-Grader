<GridPane id="root" maxWidth="Infinity" maxHeight="Infinity" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ezgrader.pdfgrader.SetupController">
    <stylesheets>
        <URL value="@./setup.css"/>
        <URL value="@./shared.css"/>
    </stylesheets>
    <SplitPane id="side-split">
        <VBox>
            <WebView></WebView>
        </VBox>
        <VBox styleClass="mainContainer" prefWidth="200">
            <HBox style="-fx-spacing: 10px">
                <Label styleClass="fa-icon, h1"><AwesomeIcon fx:constant="PENCIL"/></Label>
                <TextField styleClass="h1, stealthTextField" promptText="New Test"></TextField>
            </HBox>
<!--            <Label styleClass="h1">New Test</Label>-->
            <Separator styleClass="vert-spacer"></Separator>
            <HBox styleClass="fileSelectionBox">
                <Button onAction="#browseForPDF">
                    <graphic><BorderPane>
                        <left>
                            <Label styleClass="fa-icon" style="-fx-text-fill: white">
                                <AwesomeIcon fx:constant="FILE"/>
                            </Label>
                        </left>
                        <center>
                            <Label style="-fx-text-fill: white">Choose PDF</Label>
                        </center>
                    </BorderPane></graphic>
                </Button>
                <Label fx:id="pdfFilename" styleClass="bubbleTextDark">No file selected yet</Label>
            </HBox>
            <Separator styleClass="vert-spacer"></Separator>
            <HBox styleClass="spacedCenteredBox">
                <Label styleClass="h3">Pages Per Test</Label>
                <TextField fx:id="pagesField" styleClass="numberField"></TextField>
                <HBox HBox.hgrow="ALWAYS" />
                <Label styleClass="h4">Total Tests</Label>
                <Label styleClass="h4, bubbleNumber" fx:id="totalTests">0</Label>
            </HBox>
            <Separator styleClass="vert-spacer"></Separator>
            <HBox styleClass="spacedCenteredBox">
                <Label styleClass="h3">Questions</Label>
                <Button styleClass="fa-icon" id="addQuestionButton"><text><AwesomeIcon fx:constant="PLUS"/></text></Button>
                <HBox HBox.hgrow="ALWAYS" />
                <Label styleClass="h4">Total Points</Label>
                <Label styleClass="h4, bubbleNumber" fx:id="totalPoints">0</Label>
            </HBox>
            <TableView fx:id="questionTable" styleClass="noheader, prettyTable">
                <placeholder><Label text="No Questions yet"/></placeholder>
<!--                <columns>-->
<!--                    <TableColumn text="Points" style="-fx-pref-width: 40px; -fx-alignment: baseline-center; -fx-font-family: 'Quicksand Bold';">-->
