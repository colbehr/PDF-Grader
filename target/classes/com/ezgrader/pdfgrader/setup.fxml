<?xml version="1.0" encoding="UTF-8"?>

<?import com.ezgrader.pdfgrader.AwesomeIcon?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import java.net.URL?>
<GridPane id="root" maxWidth="Infinity" maxHeight="Infinity" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ezgrader.pdfgrader.SetupController">
    <stylesheets>
        <URL value="@./setup.css"/>
        <URL value="@./shared.css"/>
    </stylesheets>
    <SplitPane id="side-split">
        <VBox>
            <ImageView fx:id="pdfView"  fitWidth="650.0" pickOnBounds="true" preserveRatio="true"/>
            <VBox VBox.vgrow="ALWAYS" />
            <Pagination fx:id="pagination" prefHeight="66.0" prefWidth="354.0" />
        </VBox>
        <VBox styleClass="mainContainer" prefHeight="900" prefWidth="500">
            <HBox style="-fx-spacing: 10px">
                <Label styleClass="fa-icon, h1"><AwesomeIcon fx:constant="PENCIL"/></Label>
                <TextField styleClass="h1, stealthTextField" promptText="New Test"></TextField>
            </HBox>
<!--            <Label styleClass="h1">New Test</Label>-->
            <Separator styleClass="vert-spacer"></Separator>
            <HBox styleClass="fileSelectionBox">
                <Button onAction="#browseForPDF">
                    <graphic><BorderPane>
                        <left>
                            <Label styleClass="fa-icon" style="-fx-text-fill: white">
                                <AwesomeIcon fx:constant="FILE"/>
                            </Label>
                        </left>
                        <center>
                            <Label style="-fx-text-fill: white">Choose PDF</Label>
                        </center>
                    </BorderPane></graphic>
                </Button>
                <Label fx:id="pdfFilename" styleClass="bubbleTextDark">No file selected yet</Label>
            </HBox>
            <Separator styleClass="vert-spacer"></Separator>
            <HBox styleClass="spacedCenteredBox">
                <Label styleClass="h3">Pages Per Test</Label>
                <TextField fx:id="pagesField" onKeyTyped="#updatePages" styleClass="numberField"></TextField>
                <HBox HBox.hgrow="ALWAYS" />
                <Label styleClass="h4">Total Tests</Label>
                <Label styleClass="h4, bubbleNumber" fx:id="totalTests">0</Label>
            </HBox>
            <Separator styleClass="vert-spacer"></Separator>
            <HBox styleClass="spacedCenteredBox">
                <Label styleClass="h3">Questions</Label>
                <Button styleClass="fa-icon" id="addQuestionButton" onAction="#addQuestion"><text><AwesomeIcon fx:constant="PLUS"/></text></Button>
                <HBox HBox.hgrow="ALWAYS" />
                <Label styleClass="h4">Total Points</Label>
                <Label styleClass="h4, bubbleNumber" fx:id="totalPoints">0</Label>
            </HBox>
            <TableView fx:id="questionTable" styleClass="prettyTable" onKeyPressed="#deleteQuestion">
                <placeholder><Label text="No Questions yet"/></placeholder>
                <columns>
                    <TableColumn fx:id="qNumberCol" text="#">
                        <cellValueFactory>
                            <PropertyValueFactory property="qNum" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="pointsPossibleCol" text="Points">
                        <cellValueFactory>
                            <PropertyValueFactory property="pointsPossible" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="pageNumCol" text="Page">
                        <cellValueFactory>
                            <PropertyValueFactory property="pageNum" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <HBox style="-fx-alignment: center">
                <Button onAction="#GoToGrading">
                    <graphic><BorderPane>
                        <center>
                            <Label style="-fx-text-fill: white">Grade</Label>
                        </center>
                        <right>
                            <Label styleClass="fa-icon" style="-fx-text-fill: white">
                                <AwesomeIcon fx:constant="ARROW_RIGHT"/>
                            </Label>
                        </right>
                    </BorderPane></graphic>
                </Button>
            </HBox>
        </VBox>
    </SplitPane>
</GridPane>